<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_items_bg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/od_product_image"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/brd" />

        <TextView
            android:id="@+id/od_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cera_bold"
            android:text="\u20B935"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@+id/od_product_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/od_product_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/strike_through"
            android:fontFamily="@font/cera_pro_regular"
            android:text="\u20B940"
            android:textColor="#8D8D8D"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/od_product_price"
            app:layout_constraintStart_toEndOf="@+id/od_product_price"
            app:layout_constraintTop_toTopOf="@+id/od_product_price"
            app:layout_constraintVertical_bias="0.5" />


        <TextView
            android:id="@+id/od_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/cera_pro_medium"
            android:lineSpacingExtra="3dp"
            android:text="English Oven Premium Sandwich\nBread"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/od_product_image"
            app:layout_constraintTop_toBottomOf="@+id/od_product_price" />

        <TextView
            android:id="@+id/od_product_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="350 g"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/od_product_image"
            app:layout_constraintTop_toBottomOf="@+id/od_product_name" />

        <Button
            android:id="@+id/cart_add_qty_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:elevation="2dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/od_product_weight" />

        <TextView
            android:id="@+id/cart_product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="1"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_add_qty_btn"
            app:layout_constraintEnd_toStartOf="@+id/cart_add_qty_btn"
            app:layout_constraintTop_toTopOf="@+id/cart_add_qty_btn" />

        <Button
            android:id="@+id/cart_subtract_qty_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_round"
            android:elevation="2dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_add_qty_btn"
            app:layout_constraintEnd_toStartOf="@+id/cart_product_qty"
            app:layout_constraintTop_toTopOf="@+id/cart_add_qty_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>