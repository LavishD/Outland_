<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="185dp"
    android:background="@drawable/slider_curve"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:elevation="3dp"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/hs_product_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brd" />

    <TextView
        android:id="@+id/hs_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cera_bold"
        android:text="\u20B935"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hs_product_image" />

    <TextView
        android:id="@+id/hs_product_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/strike_through"
        android:fontFamily="@font/cera_pro_regular"
        android:text="\u20B940"
        android:textColor="#8D8D8D"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/hs_product_price"
        app:layout_constraintStart_toEndOf="@+id/hs_product_price"
        app:layout_constraintTop_toTopOf="@+id/hs_product_price" />

    <TextView
        android:id="@+id/hs_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="English Oven Premium \nSandwich Bread"
        android:fontFamily="@font/cera_pro_medium"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/hs_product_price"
        app:layout_constraintTop_toBottomOf="@+id/hs_product_price" />

    <TextView
        android:id="@+id/hs_product_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        android:text="350 g"
        app:layout_constraintStart_toStartOf="@+id/hs_product_name"
        app:layout_constraintTop_toBottomOf="@+id/hs_product_name" />

    <Button
        android:id="@+id/vm_atc"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/cera_pro_medium"
        android:text="Add To Cart"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hs_product_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>