<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:elevation="3dp"
    android:background="@drawable/cart_items_bg">

    <TextView
        android:id="@+id/payment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Payment Method"
        android:fontFamily="@font/cera_pro_medium"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cash on delivery (COD)"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/payment_tv"
        app:layout_constraintTop_toBottomOf="@+id/payment_tv" />

    <TextView
        android:id="@+id/shipping_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shipping Address"
        android:fontFamily="@font/cera_pro_medium"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/payment_method"
        app:layout_constraintTop_toBottomOf="@+id/payment_method" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/shipping_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/shipping_address_tv" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:id="@+id/pinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pin Code"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/address_tv"
        app:layout_constraintTop_toBottomOf="@+id/address_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>