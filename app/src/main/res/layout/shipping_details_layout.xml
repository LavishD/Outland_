<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shipping_payment_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_marginLeft="10dp"
    android:elevation="2dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/cart_items_bg">

    <TextView
        android:id="@+id/payment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cera_pro_medium"
        android:text="Payment Method"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cera_pro_regular"
        android:text="Cash on delivery (COD)"
        android:textColor="#686868"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/payment_tv"
        app:layout_constraintTop_toBottomOf="@+id/payment_tv" />

    <TextView
        android:id="@+id/shipping_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cera_pro_medium"
        android:text="Shipping Address"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_method" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/shipping_address_tv"
        app:layout_constraintTop_toBottomOf="@+id/shipping_address_tv" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/name_tv"
        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

    <TextView
        android:id="@+id/pinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pin Code"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="#686868"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/address_tv"
        app:layout_constraintTop_toBottomOf="@+id/address_tv" />

    <Button
        android:id="@+id/change_add_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_round"
        android:elevation="2dp"
        android:fontFamily="@font/cera_pro_medium"
        android:text="Change Or Add Address"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinCode" />
</androidx.constraintlayout.widget.ConstraintLayout>